SELECT 
    p.product_id, 
    ROUND(COALESCE(SUM(us.units * p.price) / NULLIF(SUM(COALESCE(us.units, 0)), 0), 0), 2) AS average_price
FROM 
    Prices p
LEFT JOIN 
    UnitsSold us ON p.product_id = us.product_id
               AND us.purchase_date BETWEEN p.start_date AND p.end_date
GROUP BY 
    p.product_id;
